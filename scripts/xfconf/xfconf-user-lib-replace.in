#!/bin/sh
#
# @author Richard St√∂ckl <richard.stoeckl@aon.at>
# @brief Populates the Xfconf database with the default Xfce channels and properties.
# @date 15.05.2023

if [ ! -f "$HOME/.xprofile" ]; then
	echo "#!/bin/sh" > "$HOME/.xprofile"
	echo >> "$HOME/.xprofile"
	chmod +x "$HOME/.xprofile"
fi

echo "export G_MESSAGES_DEBUG=all" >> "$HOME/.xprofile"
echo "export LD_PRELOAD=\"@CMAKE_INSTALL_PREFIX@/lib@LIB_SUFFIX@/libxfconf-elektra.so\"" >> "$HOME/.xprofile"
