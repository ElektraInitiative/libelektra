[force]
opt = f
opt/long = force
opt/arg = none

[interactive]
opt = #1
opt/#0 = i
opt/#0/long = interactive
opt/#0/arg = optional
opt/#0/flagvalue = always
opt/#1 = I
opt/#1/flagvalue = once
opt/#1/arg = none

[singlefs]
opt/long = one-file-system
opt/arg = none

[nopreserve]
opt/long = no-preserve-root
opt/arg = none

[preserve]
opt/long = preserve-root
opt/arg = optional

[recursive]
opt = #1
opt/#0 = r
opt/#0/long = recursive
opt/#0/arg = none
opt/#1 = R
opt/#1/arg = none

[emptydirs]
opt = d
opt/long = dir
opt/arg = none

[verbose]
opt = v
opt/long = verbose
opt/arg = none

[showversion]
opt/long = version
opt/arg = none

[files/#]
args = remaining
completion/shell = ./complete_files.sh
