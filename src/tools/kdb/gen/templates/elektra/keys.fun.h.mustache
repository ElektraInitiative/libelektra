 */// {{=/*% %*/=}}
static inline /*%& native_type %*/ ELEKTRA_GET (/*%& macro_name %*/) (Elektra * elektra /*%# args? %*/,
								      /*%# args %*/ /*%& native_type %*/ /*%& name %*/ /*%^ last? %*/,
								      /*%/ last? %*/ /*%/ args %*/ /*%/ args? %*/)
{
	/*%# args? %*/
