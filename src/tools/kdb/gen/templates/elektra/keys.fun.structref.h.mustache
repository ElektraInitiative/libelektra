static inline void ELEKTRA_SET (/*%& tag_name %*/) (Elektra * elektra, const char * value, /*%# args? %*/ /*%# args %*/
						    /*%& native_type %*/ /*%& name %*/,
						    /*%/ args %*/ /*%/ args? %*/ ElektraError ** error)
{
	/*%# args? %*/
	char * name = elektraFormat ("/*% fmt_string %*/", /*%# args %*/ /*%# index? %*/ elektra_len (/*%& name %*/),
				     elektra_len (/*%& name %*/), "#___________________", /*%/ index? %*/ /*%& name %*/ /*%^ last? %*/,
				     /*%/ last? %*/ /*%/ args %*/);
	elektraSetRawString (elektra, name, value, "struct_ref", error);
	elektraFree (name);
	/*%/ args? %*/
	/*%^ args? %*/
	elektraSetRawString (elektra, "/*% name %*/", value, "struct_ref", error);
	/*%/ args? %*/
