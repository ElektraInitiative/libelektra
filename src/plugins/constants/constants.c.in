static void elektraAddKeyValue (KeySet * ks, Key * parentKey, const char * key, const char * value)
{
	Key * k = keyDup (parentKey, KEY_CP_ALL);
	keyAddName (k, key);
	keySetString (k, value);
	ksAppendKey (ks, k);
}

