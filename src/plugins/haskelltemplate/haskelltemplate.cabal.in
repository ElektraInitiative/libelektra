name:                haskelltemplate
version:             0.1.0.0
-- synopsis:
description:         Template plugin for developing haskell plugins
homepage:            https://www.libelektra.org
license:             BSD3
author:              e1528532
maintainer:          e1528532@libelektra.org
copyright:           libelektra.org
category:            plugin
build-type:          Simple
cabal-version:       >=1.10

library
  hs-source-dirs:    @CMAKE_CURRENT_SOURCE_DIR@
  exposed-modules:   Elektra.Haskelltemplate
  build-depends:     base >= 4.7 && < 5, libelektra-haskell
  default-language:  Haskell2010
  other-extensions:  ForeignFunctionInterface

source-repository head
  type:     git
  location: https://git.libelektra.org
