+		}
+		
+		/* Get Display subsections */
+		dataSize=keyGetFullNameSize(key)+30;
+		options=xf86confmalloc(dataSize);
+		keyGetFullName(key,options,dataSize);
+		strncat(options,"/Displays", dataSize-1);
