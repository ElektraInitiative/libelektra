+			}
+		}
+
+		key = keyNew(buffer,
+				KEY_SWITCH_VALUE, value,
+				KEY_SWITCH_END);
+		ksAppend(ks,key);
+	}
+
+	xf86conffree(value);
+	xf86conffree(buffer);
