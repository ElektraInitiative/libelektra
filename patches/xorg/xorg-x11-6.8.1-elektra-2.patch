+	kdbGetChildKeys(handle, localRootKey, monitors,
+		KDB_O_DIR | KDB_O_NOVALUE | KDB_O_SORT);
+	xf86conffree(localRootKey);
+
+	if (ksGetSize(monitors) == 0) {
+		ksDel(monitors);
+		return NULL;
