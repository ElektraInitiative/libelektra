+	if ( (bufs = ptr->dri_buffers_lst) ) {
+		snprintf(buffer, size, "%s/DRI/Buffers",root);
+		value[0]=0;
+		for (bufs = ptr->dri_buffers_lst; bufs; bufs = bufs->list.next) {
