+				/* Don't allow duplicates */
+				for (aptr = screen->scrn_adaptor_lst; aptr;
+						aptr = (XF86ConfAdaptorLinkPtr) aptr->list.next)
+					if (xf86nameCompare (cursor, aptr->al_adaptor_str)==0)
